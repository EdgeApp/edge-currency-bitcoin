{
  "name": "edge-currency-bitcoin",
  "version": "3.8.0-alpha.2",
  "description": "Edge Bitcoin currency plugin",
  "homepage": "https://edge.app",
  "repository": {
    "type": "git",
    "url": "git@github.com:EdgeApp/edge-currency-bitcoin.git"
  },
  "license": "SEE LICENSE IN LICENSE",
  "author": "Edge",
  "contributors": [
    "Eliran Zach <eliran@edge.app>",
    "William Swanson <william@edge.app>",
    "Paul Puey <paul@edge.app>",
    "Stan Synko <stan@airbitz.co>"
  ],
  "files": [
    "CHANGELOG.md",
    "lib/*",
    "LICENSE",
    "package.json",
    "README.md",
    "src/*"
  ],
  "main": "./lib/index.js",
  "module": "./lib/index.es.js",
  "react-native": "lib/index.react.js",
  "scripts": {
    "build": "rimraf lib && rollup -c && flow-copy-source src lib",
    "build:test": "rollup -c test/rollup.config.js",
    "precommit": "lint-staged && flow && npm test && npm run build",
    "flow": "flow",
    "format": "prettier-eslint --write '*.js' 'src/**/*.js' 'test/**/*.js'",
    "lint": "eslint '*.js' 'src/**/*.js' 'test/**/*.js'",
    "prepare": "npm run build",
    "security": "yarn audit",
    "pretest": "npm run build:test",
    "test": "nyc mocha --require source-map-support/register build/tests.js --reporter mocha-multi-reporters --reporter-options configFile=./mocha-config.json",
    "posttest": "nyc report --reporter=cobertura --reporter=html",
    "updot": "updot"
  },
  "dependencies": {
    "@nidavellir/networks-unsafe": "^3.8.0-alpha.2",
    "bcoin": "git+https://github.com/Airbitz/bcoin.git#primitiveBuild",
    "biggystring": "3.0.2",
    "bn.js": "^4.11.8",
    "buffer": "^5.2.1",
    "chai": "^4.2.0",
    "coinselect": "^3.1.11",
    "eventemitter3": "^3.1.0",
    "jsonschema": "^1.2.4",
    "nidavellir": "^3.8.0-alpha.2",
    "unorm": "^1.4.1",
    "uri-js": "^4.2.2",
    "url-parse": "^1.4.3"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-object-rest-spread": "7.2.0",
    "@babel/plugin-transform-flow-strip-types": "7.2.0",
    "@babel/preset-flow": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "edge-core-js": "0.12.21",
    "eslint": "^5.6.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "flow-bin": "^0.82.0",
    "flow-copy-source": "^2.0.2",
    "husky": "^1.1.3",
    "jsonfile": "^5.0.0",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "mocha-multi-reporters": "^1.1.7",
    "mochawesome": "^3.0.3",
    "node-fetch": "^2.2.0",
    "nyc": "^13.0.1",
    "prettier-eslint-cli": "^4.7.1",
    "request": "^2.88.0",
    "rimraf": "^2.6.2",
    "rollup": "0.64.0",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-babel": "^4.0.1",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-flow-entry": "^0.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-multi-entry": "^2.0.2",
    "secp256k1": "^3.6.1",
    "source-map-support": "^0.5.9",
    "updot": "^1.1.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "importSort": {
    ".js, .es": {
      "parser": "babylon",
      "style": "module"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier-eslint --list-different"
    ]
  }
}
